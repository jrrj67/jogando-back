services:
  db:
    environment:
      MYSQL_DATABASE: db
      MYSQL_PASSWORD: password
      MYSQL_ROOT_PASSWORD: password
      MYSQL_USER: user
    expose:
    - '3306'
    image: mysql:5.7
    ports:
    - published: 3306
      target: 3306
    restart: always
    volumes:
    - my-db:/var/lib/mysql:rw
  thetruth.api:
    build:
      context: C:\Users\rafae\source\repos\the-truth\TheTruth
      dockerfile: TheTruth.Api/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    image: thetruthapi
    ports:
    - target: 80
    - target: 443
    volumes:
    - C:\Users\rafae\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\rafae\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
version: '3.4'
volumes:
  my-db: {}